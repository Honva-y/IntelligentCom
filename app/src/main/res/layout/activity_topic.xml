<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@mipmap/topicback"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" >
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_margin="10dp"-->
                <!--android:background="@drawable/button_corners_blue"-->
                <!--android:padding="1dp"-->
                <!--android:src="@mipmap/add"-->
                <!--/>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/head"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/topic_tv_topic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="小区话题"
            android:textColor="@color/colorGreen"
            android:gravity="center"
            android:textSize="@dimen/text_normal_size"
            />
        <TextView
            android:id="@+id/topic_tv_interation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="区间互动"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_normal_size"
            />
        <TextView
            android:id="@+id/topic_tv_secondhand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="小区二手"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:textSize="@dimen/text_normal_size"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/topic_iv_tabline"
        android:layout_width="100dp"
        android:layout_height="2.5dp"
        android:background="@drawable/tabline"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/topic_viewpage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        ></android.support.v4.view.ViewPager>

</LinearLayout>
