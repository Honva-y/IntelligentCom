<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/many_top_back_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        >
        <com.example.tick.myapplication.MyView.ClearEditText
            android:id="@+id/register_photo_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="11"
            android:lines="1"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/text_normal_size"
            android:hint="手机号码"
            android:textColorHint="@color/colorText"
            android:background="@null"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        >
        <com.example.tick.myapplication.MyView.ClearEditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="18"
            android:lines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_normal_size"
            android:hint="密码"
            android:textColorHint="@color/colorText"
            android:background="@null"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        >
        <com.example.tick.myapplication.MyView.ClearEditText
            android:id="@+id/register_sure_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:maxLength="18"
            android:lines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_normal_size"
            android:hint="确认密码"
            android:textColorHint="@color/colorText"
            android:background="@null"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <com.example.tick.myapplication.MyView.ClearEditText
            android:id="@+id/register_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:maxLength="6"
            android:lines="1"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_normal_size"
            android:hint="验证码"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/colorText"
            android:background="@null"
            />
        <Button
            android:id="@+id/register_bt_getcode"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:textColor="@color/white"
            android:text="获取"
            android:textSize="@dimen/text_small_size"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_corners_blue"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/colorLine"
        />
    <Button
        android:id="@+id/register_bt_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:text="注册"
        android:textSize="@dimen/button_text_size"
        android:textColor="@color/white"
        android:background="@drawable/button_corners_blue"
        />
</LinearLayout>
