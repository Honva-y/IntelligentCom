<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/main_iv_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/home1" />

        <TextView
            android:id="@+id/main_tv_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/home"
            android:gravity="center"
            android:text="主页"
            android:textColor="@color/colorBlue" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/propery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_iv_proprey"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/propery0" />

        <TextView
            android:id="@+id/main_tv_proprey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/propery"
            android:gravity="center"
            android:text="物业"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_iv_topic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/topic0" />

        <TextView
            android:id="@+id/main_tv_topic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topic"
            android:gravity="center"
            android:text="话题"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_iv_mine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/mine0" />

        <TextView
            android:id="@+id/main_tv_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/colorText" />
    </LinearLayout>

</LinearLayout>
