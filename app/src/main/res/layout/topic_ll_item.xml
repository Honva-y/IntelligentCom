<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            >

            <ImageView
                android:id="@+id/topic_iv_userhead"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/head" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/topic_tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="text"
                android:textSize="@dimen/text_small_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/topic_tv_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="text"
                    android:textSize="@dimen/text_small_size" />
                <ImageView
                    android:id="@+id/topic_iv_comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@mipmap/comment0" />

                <ImageView
                    android:id="@+id/topic_clickzan"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/zan0" />

                <ImageView
                    android:id="@+id/topic_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="删除"
                    android:src="@mipmap/delete_topic"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topic_ll_clickzan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorback"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top"
                    android:padding="5dp"
                    android:src="@mipmap/zan2" />

                <TextView
                    android:id="@+id/topic_zan_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:textSize="@dimen/text_small_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/topic_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/colorback"
                android:lineSpacingMultiplier="1.2"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="text" />
        </LinearLayout>
</LinearLayout>
