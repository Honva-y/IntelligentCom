<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/topic_comment_iv_face"
    android:layout_alignParentTop="true"
    android:src="@mipmap/face"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/topic_comment_et_content"
        android:layout_toRightOf="@id/topic_comment_iv_face"
        android:layout_toLeftOf="@+id/topic_comment_bt_send"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:background="@null"
        android:focusable="true"
        android:hint="来说一句吧.."
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/topic_comment_bt_send"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="发送"
        android:textColor="@color/white"
        android:background="@drawable/button_corners_blue"
        />
</RelativeLayout>
